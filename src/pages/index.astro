</HomepageLayout>

<style lang="scss">
  .shapeintro {
    color: white; 
    // height: 30rem;
    width: 114%;
    margin-inline: -7%;
    height: 30rem;
    padding-top: 3rem;
    // top: -10rem;
    top: 0;
    text-align: center;
    position: relative;
    z-index: 30;
    &::after {
      content: '';
      height: 100%;
      width: 100%;
      background-color: hsl(var(--color1hsl));
      background: linear-gradient(to bottom, hsl(var(--color1hsl)) 80%, hsl(var(--color1h), 70%, 20%) );
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      clip-path: polygon(0% 79.25%, 0% 0%, 100% 0%, 100% 79.25%, 50% 100%);
    }
    & p {
      color: white;
    }
  }
  .lottieintro{
    width: 100%;  
    // height: 50rem;
    min-height: 30rem;
    text-align:center;
    display:block;
    left: 50%;
    bottom:-4rem;
    position: relative;
    transform: translate(-50%,0);
    // margin-top: -20rem;
    z-index:40;
  }
  .bodylottie {
    // max-height: 13rem;
    height: 25rem;
    object-fit:contain;
  }
</style>
