  .introCTA{
    width: 100%; 
    display: flex;
    justify-content: center; 
    flex-flow: column nowrap;
    margin-bottom: 2rem;
    gap: 1rem; 
    align-items: center;
  }
  #testscreen{
    perspective: 500px;
    bottom: calc(-80vw - 3rem);
    width: 88vw;
    max-width: 70rem;
    margin-inline: auto;
    position: absolute;
    left: 6%;
    z-index: 10;
  }

.producttraits {
  display: grid!important;
  grid-template-columns: repeat(auto-fit, minmax(18rem,  44%));    
  flex-flow: row wrap;
  justify-content: space-around;
  align-content: start;
  column-gap: 6%;
  // row-gap: 2.5rem;
  margin-bottom: 4rem;
  & > div {
    flex: 1 1 24rem;
    // min-width: 18rem;
    max-width: 28rem;
    margin-inline: auto;
    & > h3 {
      font-size: 1.85rem;
      // text-align: center;
      // text-indent: 1rem;
    }
    & > h4 {
      font-size: 1.25rem;
      letter-spacing: 0;
      // text-indent: 1rem;
    }
    & > p {
      margin-top: 0.5rem;
      text-indent: 0;
    }
  }
}

  @media (min-width: 690px ){
    .introCTA{
    flex-flow: row nowrap;
    margin-bottom: 4rem;
    }
    .producttraits {
      margin-top: 1rem;
    }
    .shapeintro {
      // margin-bottom: calc(10rem * 1.2);
    }
    .introtext {
      position: absolute;
      width: 50%;
      left: 8vw;
      top: 3rem;
      z-index: 100;
      & h2, & p, & h3 {
        color: white;
        text-align: left!important;
      }
      & p, & h3 {
        max-width: 44vw;
      }
      & > h2 {
        line-height: 3rem;
        font-size: 2.4rem;
        font-weight: bolder;
        text-align: left;
        text-indent: 0;
        max-width: 70vw;
        position: relative;
        top: 2rem;
        margin: 0 0 2rem;
        display: block;
        text-shadow: 0 4px 14px #22222299;
      }
      & > p {
        margin-top: 4rem;
        font-size: 110%;
        text-indent: 0;
        padding-right: 5%;
        text-shadow: 0 3px 9px  #44444499;
      }
      & > h3 {
        margin-top: 1.5rem;
        font-size: 1.3rem;
        letter-spacing: 0;
        font-weight: bolder;
        text-shadow: 0 2px 4px #66666699;
      }
    }

    .introtext p, .introtext h3 {
      width: 45vw;
    }    
    #testscreen{
      perspective: 500px;
      bottom: 0vw;
      height: 100%;
      width: clamp(20rem, 40vw, 90rem);
      position: absolute;
      left: calc(53vw + 1rem);
      z-index: 10;
      overflow:hidden;
      transform:  translate(15%, 0) rotate3d(0, -20, 0, 10deg);
      & > img {
        position: absolute;
        left: 0;
        top: 5%;
        height: 90%;
        display: block;
        z-index: 100;
        border-radius: 4px;
        transform: rotate3d(0, -20, 0, 10deg);
        box-shadow: 0 0 20px -3px #333;
      }
    } 
  }
  .lottieintro{
    width: 100%;  
    min-height: 30rem;
    text-align:center;
    display:block;
    left: 50%;
    bottom:-14rem;
    position: absolute;
    transform: translate(-50%,0);
    z-index:40;
  }
  .bodylottie {
    max-width: 25rem;
    height: 25rem;
    object-fit:contain;
  }
   
   .producttraits{
      margin-top: 3rem;
      & > div {
        & > img{
          filter: invert(22%) sepia(69%) saturate(1660%) hue-rotate(345deg) brightness(100%) contrast(86%);
        }
      }
     & h3 {
       letter-spacing: 0;
     }
   } 
   	.timelinediv{
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    flex-wrap: nowrap;
    max-width: 100%;
    & > div:nth-of-type(2){
      flex: 1 1 30rem;
      height: 15rem;
    }
    .timelinelottie {
      height: 100%;
      margin: auto 0 auto auto;
      max-width: 13rem;
    }
  }
  @media (max-width: 790px){
    .timelinediv div:nth-of-type(2){
      flex: 1 1 0;
      width: 0;
    }
    :global(.timelinelottie) {
      display: none;
    }
  }
  
  .introicon{
    width: 9rem;
    margin-inline: auto;
    display: block;
    // margin-bottom: 1.3rem;
  }
  .concernblobcontainer {
    margin-top: 5rem;
    display: grid;
    flex-wrap:wrap;
    width: 106%;
    margin-left: -3%;
    grid-template-columns: repeat(auto-fit, minmax(1rem, 50%));
    padding-inline: 4%;
    grid-auto-rows: 1fr;
  }
  .partnersdiv {
    position: relative;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    align-items: center;
    column-gap: 1rem;
    width: 100%;
    & > a { 
      filter: invert(23%) sepia(18%) saturate(7185%) hue-rotate(347deg) brightness(95%) contrast(84%);
      position: relative;
      text-align: center;
      transform: scale(1);
      transition: transform 0.2s;
      & > img {
        height: 100%;
        max-width: 16rem;
      }
      &:hover {
        transform: scale(1.1);
      }
     }
  }
  .rmanswer {
    display: flex;
    flex-flow: row wrap;
    margin-inline: auto;
    padding: 5rem 5% 3rem;
    & h3 {
      display: inline-block;
    } 
    & > div {
      flex: 2 1 60%;
      min-width: 30rem;
      padding: 1rem 1.5rem;
    }
    & > :global(img) {
      flex: 2 1 40%;
    }
  }
 .morecapabilities{
  outline: 2px solid purple;
 }  
 .hiddenheader{
  display: none;
 }
</style> 
