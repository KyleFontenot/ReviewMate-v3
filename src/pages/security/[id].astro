---
import FeatureLayout from '../../layouts/FeatureLayout.astro'
import Feature from '../../components/Feature.astro'
import CallToAction from '../../components/CallToAction.astro'
import CommonTraits from "../../components/CommonTraits.jsx"
import featureList from '../../featureList.js'

export function getStaticPaths() {
  return featureList.security.map(feature => 
  {
    return({
      params: {id: feature.slug}, 
      props: {feature: feature}
    })})
}
const {feature} = Astro.props;
---
<FeatureLayout>
<Feature title={feature.title} imgSrc={feature?.imgSrc} imgAlt={feature?.imgAlt} commontraits> 
  <div slot="paragraphs">
    {feature.long.map(paragraph => {
      return (
        <p>{paragraph}</p>
      )
    })}
  </div>
  {feature?.commontraits === true ? <CommonTraits client:idle /> : ''}
  
  { feature.bullets ? <h3 style="width: 100%;margin-bottom: 2rem;">{feature.bullets.header}</h3><ul class="list" >{feature?.bullets?.bullets?.map(point => {
    return (
      <li class="bullet">{point}</li>
    )
  }
  )}</ul> : 

  (feature?.bullets !== undefined && feature?.bullets?.length > 0) ? <ul class="list" >{feature?.bullets?.map(point => {
    return (
      <li class="bullet">{point}</li>
    )
  }
  )}</ul> 
  : ''} 

  <CallToAction explain previousButton={{text: 'Security', href: "/security/"}}></CallToAction>
</Feature>

</FeatureLayout>
<style lang="scss">
  .list {
    width :100%;
    margin-bottom: 4rem;
    display: flex;
    gap: 1rem;
    flex-flow: row wrap;
    & li {
      flex: 2 1 40rem;
    }
  }
.featurelist {
  margin-top: 2rem;
  & li {
    margin-bottom: 1rem;
  }
}
.accuracyrate {
  font-size: 3.2rem;
  position: absolute;
  top: 50px;
  right: 50px;
}
.inpatienttable {
  border-collapse: separate;
  border-spacing: 1rem 1em;
  margin-top: 3.4rem;
  & > thead {
    margin-top: 2rem;
  }
}
</style>
