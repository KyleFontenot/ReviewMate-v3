<style lang="scss">
  $bigcirclewidth: 40vw;
  $circlewidth: 30vw;
  $circleradius: calc($circlewidth / 2);
  
  #aitraits {
    display: grid;
    place-items: center;
    width: 100%;
    position: relative;
    margin-inline: auto;
    aspect-ratio: 1 / 1;
    margin-top: 2rem;
    margin-bottom: 2rem;
    & .main, & .sub {
      position: absolute;
      display: grid;
      place-items: center;
      color: white;
      font-size: 2rem;
      border-radius: 100vw;
      transform-origin: center center;
      line-height: 2rem;
      text-align: center;
    }
    & .main {
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      width: $bigcirclewidth;
      height: $bigcirclewidth;
      padding:6%;
      background-color: hsla(var(--color1h),var(--color1s),var(--color1l), 85%);
      border: 10px solid #ffffff22;
      // z-index: 10;
    }
    .sub {
      width: $circlewidth;
      height: $circlewidth;
      padding:6%;
      font-size: 1.3rem;
      background-color: hsla(var(--color1h), var(--color1s), var(--color1l), 70%);
      border: 7px solid #ffffff22;
    }
    & .sub:nth-of-type(2){
      left: calc(50% - $circlewidth / 2);
      top: 0%;
    }
    & .sub:nth-of-type(3){
      left: calc(85% - $circlewidth / 2);
      top: 30%;
    }
    & .sub:nth-of-type(4){
      left: calc(70% - $circlewidth / 2);
      top: 62%;
    }
    & .sub:nth-of-type(5){
      left: calc(30% - $circlewidth / 2);
      top: 62%;
    }
    & .sub:nth-of-type(6){
      left: calc(15% - $circlewidth / 2);
      top: 30%;
    }
  }
  .riskmanager {
    background-color: #fafafa;
    width: 114%;
    margin-inline:-7%;
    padding:2rem 10%;
    display: grid;
    place-items: center;

  }
  div.featurequality{
    display:flex;
    flex-flow: column wrap;
    padding: 4rem 0;
    position: relative;
    width: 100%;
  }
  .list{
    margin-top: 1.5rem;
    & > li {
      margin-bottom: 0.8rem;
    }
  }
  .introparagraph{ 
    width: 100%;
   }
  @media(min-width:540px){
  .introparagraph{ 
    width: clamp(4rem, 76%, 40rem);
   }
  }
  .featurelist {
      display: flex;
      justify-content: space-between;
      flex-flow: row wrap;
        gap: 1rem;
      border-color: hsl(var(--color1hsl));
      box-shadow: 0 3px 10px -2px #bbb;
      padding: 2.5rem 1.4rem 4rem;
      border-radius: 8px;
      margin-top: 3rem;
      z-index: 30;
      & > :global(div), & > :global(article), & > :global(article), :global(section),{
        flex: 2 1 30rem;
        margin-bottom: 2rem;
        margin-inline: auto;
      }
    }
