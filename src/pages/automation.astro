      }
 }

 $tableborderwidth: 1px;
 $tablebordercolor: #666;
 $tableborderradius: 7px;
.table{
  width: 100%;
  & th {
    font-weight: bold;
    font-size: 120%;
    padding-top: 2rem;
    padding-bottom: 1rem;
    line-height: 2rem;
    letter-spacing: 0;
  }
  & tr {
    td{
      padding: 7px 10px;
      border-color: #666;
      border-style: solid;
      border-width: $tableborderwidth;
      border-bottom-width: 0;
      &:first-of-type {
        border-right-width: 0px;
      }
      &:last-of-type {
        border-left-width: 0px;
      }
    }
    &:first-of-type {
      td:first-of-type {
        border-top-left-radius: $tableborderradius;
      }
      td:last-of-type {
        border-top-right-radius: $tableborderradius;
      }
    }
    &:last-of-type {
      & td {
        border-bottom-width: $tableborderwidth;
      }
      td:first-of-type {
        border-bottom-left-radius: $tableborderradius;
      }
      td:last-of-type {
        border-bottom-right-radius: $tableborderradius;
      }
    }
  }
}

