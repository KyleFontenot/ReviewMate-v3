---
import StandardLayout from "../layouts/StandardLayout.astro"
import Feature from "../components/Feature.astro"
import FeatureCategory from "../components/FeatureCategory.astro"
import {pageOpenGraph} from '../utils.js'
---
<StandardLayout 
  openGraph={new pageOpenGraph('Automation Features', 
  "For top-down administration uses, ReviewMate enhances capabilities of many managers, clients, and end-users of the auditing process. Time tracking, staffing analytics, integrations, and elaborate risk management are focuses of ReviewMate.")}>
  <FeatureCategory title="Automation" imageBG="/src/images/automationoverview.jpg">
    <div slot="generalinfo" class="intoparagraph">
      <p></p>
    </div>
    <!-- Insert body here -->
  
  </FeatureCategory>
</StandardLayout>

<style lang="scss">
  .intoparagraph{ 
    width: 100%;
   }
  @media(min-width:540px){
  .intoparagraph{ 
    width: clamp(4rem, 76%, 40rem);
   }
  }
  .featurelist {
      display: flex;
      justify-content: space-between;
      flex-flow: row wrap;
        gap: 1rem;
      border-color: hsl(var(--color1hsl));
      box-shadow: 0 3px 10px -2px #bbb;
      padding: 2.5rem 1.4rem 4rem;
      border-radius: 8px;
      margin-top: 3rem;
      z-index: 30;
      & > :global(div), & > :global(article), & > :global(article), :global(section),{
        flex: 2 1 30rem;
        margin-bottom: 2rem;
        margin-inline: auto;
      }
    }
</style>