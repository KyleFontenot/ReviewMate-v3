    font-size: 0.9rem;
    padding-left: 2.6rem;
    // margin-left: 1rem;
    margin: 8px 1rem;
    position: relative;
    transition: transform 0.2s;
    &:hover {
      transform: translate(0, -2px);
    }
    & > * {
      float: left;
      vertical-align: middle;
    }
    & :global(svg) { 
      height: 26px;
      width: 26px;
      display: inline-block;
      position: absolute;
      left: 0.5rem;
      top: 6px;
     }
  }

  .blockquote { 
    background-color: #f2f2f2;
    border-radius: 6px;
    border-bottom-right-radius: 15px;
    border-top-right-radius: 15px;
    font-size: 1.1rem;
    margin: 2rem 2rem 2rem 0.3rem;
    padding: 30px 50px;
    position: relative;
    width: 100%;
   }
   .blogimage {
    max-height: 20rem!important;
    object-fit: cover;
   }
  .sharecontainer {
    display:flex;
