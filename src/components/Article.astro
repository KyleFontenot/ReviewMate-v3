---
import Arrow from './Arrow.astro'

interface ArticleProps {
  href: string;
  imgSrc: string;
  imgAlt: string;
  articleTitle: string;
  body: string;
  author: string;
  date: Date;
  size: 'small' | 'large';
  externallink: boolean;
}

const {href, imgSrc, imgAlt, articleTitle, body, author, date, size = 'small', externallink = false} = Astro.props as ArticleProps;
const concatsrc = `https:${imgSrc}`
// console.log(imgAlt)
---
<a href={`${href}`} class={ `article${size === 'small' ? ' article--small' : ''}` }>
  <div class="image">
    <img src={concatsrc} alt={ imgAlt.toString() } />
  </div>
  <div class="textbody">
    <h3>{articleTitle}&nbsp;{(externallink === true) && <Arrow direction="upright" color="#666" />}</h3>
    <p>{body}</p>
    <!-- <p class="author">{author}</p> -->
    <p class="date">{date}</p>
  </div>
</a>

<style lang="scss">
.article { 
    transition: outline 0.2s;
    outline: 2px solid transparent;
    flex: 2 1 20rem;
    position: relative;
    display: block;
    height: 100%;
    max-width: 50rem;
    border: 2px solid transparent;
      border-radius: 10px;
    box-shadow: 0 6px 16px -8px #33333388;
    transition: transform 0.3s;
    &::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      display: block;
      top: 0;
      left: 0;
      z-index: 1;
      border-radius: 10px;
      box-shadow: 0 10px 12px 0px #33333366;
      opacity: 0;
      transition: opacity 0.3s;
    }
    &:hover, &:focus-visible, {
      border: 2px solid hsl(var(--color1hsl));
      transform: translate3d(0, -5px, 0);
      &::after {
        opacity: 1;
      }
    }
   }
   .article--small{
    & .image {
      height: 10rem;
    }
    & .textbody {

    }
   }
   .image {
      display: block;
      overflow: hidden;
      width: 100%;
      flex: 2 1 12rem;
      position: relative;
      overflow-y: hidden;
      & :global(img) {
        display: block;
        object-fit: cover;
        width: 100%;
        max-height: 15rem;
      }
   }

.textbody {
   background-color: white;
   padding: 20px 30px 3rem;
   position: relative;
   border-bottom-left-radius: 10px;
   border-bottom-right-radius: 10px;
   min-height: 10rem;
   height: 100%;
   & > h3 {
     margin-top: 0;
     margin-bottom: 0.7rem;
     font-size: 1.6rem;
   }
   & > h4 {
     font-size: 1.3rem;
   }
   & p {
     text-indent: 0;
     line-height: 1.7rem;
     font-size: 85%;
   }
   & .url {
     font-size: 0.8rem;
     line-height: 1rem;
     color: #999;
   }
   & .date {
     position: absolute;
     right: 1.5rem;
     bottom: 0.5rem;
     font-size: 0.9rem;
   }
 }
 .readmore {
  position: absolute;
  bottom: 0.75rem;
  right: 1.25rem;
  font-size: 0.95rem;
  background-color: white;
  color: hsl(var(--color1hsl));
 }
 .author {
  position: absolute;
  bottom: 0.55rem;
  left: 1.5rem;
 }
</style>