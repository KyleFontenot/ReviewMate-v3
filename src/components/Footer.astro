  <style lang="scss">
    footer {
      padding: 3rem 6% 6%;
      background-color: #555;
      color: white;
      
      font-family: var(--font-1);
      & div.flex {
        max-width: 60rem;
        display: flex;
      flex-flow: row wrap;
      gap: 2rem;
      justify-content: center;
      margin-inline: auto;
      }
      & ul {
        list-style-type: none;
        color: white;
        margin-inline: auto;
        display: block;
        order: 2;
        & li {
          color: white;
          & a {
            color: #eee;
            line-height: 1.5rem;
            padding: 0.1rem;
            display: block;
            font-size: 0.9rem;
