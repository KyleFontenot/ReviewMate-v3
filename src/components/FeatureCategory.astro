---
const {title} = Astro.props
---
<section class="featurecategory">
  <h1>{title}</h1><br/>
  <div><slot/></div>
</section>

<style lang="scss">
  .featurecategory{
    display: block;
    margin-inline: auto;
    color: #666;
    position: relative;
    border: none;
    
    letter-spacing: 0.2px;
    
    & > div {
      display: flex;
      justify-content: space-around;
      flex-flow: row wrap;
      gap: 1rem;
      border-color: hsl(var(--color1hsl));
      box-shadow: 0 1px 10px -2px #bbb;
      padding: 2.5rem 1.4rem 3rem;
      border-radius: 8px;

      & > :global(div), section{
        
        flex: 1.5 1 26rem;
        max-width: 40rem;
        margin-bottom: 3rem;
        margin-inline: auto;
      }
    }
    
  }
</style>