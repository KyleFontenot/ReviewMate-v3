<style lang="scss">
	$numOfDivs: 5;
	.timelinediv {
    display:grid;
    grid-template-columns: 3rem auto;
    grid-template-rows: repeat($numOfDivs, auto);
    max-width: 50rem;
    margin-inline: auto;
    position: relative;
	}
  
  .lineblock {
    width: 100%;
    height: 100%;
    background-color: white;
    display:block;
    // background-color: hsl(var(--color1hsl));
    // background-color: transparent;
    // overflow: hidden;
    position: relative;
    left: 0;
    // height: calc(100% - 6rem);
    grid-row: span 1;
    grid-column: span 1;
    // z-index: 999;
    // mask-image: url('/timeline(2negative).svg');
    


    &::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      display: block;
      background-color: #00000022;
      top: 0;
      left: 0;
      mask-image: url('/timeline(2).svg');
    }
    &:nth-of-type(1){
      mask-image: url('/timeline(1).svg');
    }
    mask-image: url('/timeline(2).svg');
    &:nth-of-type(#{$numOfDivs * 2 - 1}){
      mask-image: url('/timeline(3).svg');
      outline: 2px solid red;
    }
  }
  .timelinefilldiv{
    position: absolute;
    // top: 3rem;
    top: 0;
    left: 0;
    height: calc(100% );
    width: 3rem;
    background-color: #ddd;
    background-color: transparent;
    z-index: 100;
    &:nth-of-type(1){
      mask-image: url('/timeline(1).svg');
    }
    mask-image: url('/timeline(2).svg');
    &:nth-of-type(#{$numOfDivs * 2 - 1}){
      mask-image: url('/timeline(3).svg');
      outline: 2px solid red;
    }
  }
  .timelinefill{
    position: sticky;
    left: 0;
    height: 25vh;
    width: 3rem;
    top: 0;
    margin-top: -25vh;

    background-color: hsl(var(--color1hsl));
    z-index: 200;
  }

  .stepblock {
    padding: 1rem;
    padding-left: 2rem;
    height: 15rem;
  }
  
</style>
