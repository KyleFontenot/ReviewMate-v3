---
import CommonTraits from "./CommonTraits.jsx"
import { Image } from '@astrojs/image/components';

interface FeatureProps {
  title: string;
  imgSrc: string;
  imgAlt: string;

}

const { title, imgSrc, imgAlt} = Astro.props as FeatureProps;
console.log(imgSrc)
---
<article class="largefeature">
  <div class="largediv">
    <div class="intro">
      <h1 class="title">{title}</h1>
      <div class="paragraph">
        <slot name="paragraphs" />
        <slot name="bulletpoints" />
      </div>
    </div>
  
    <Image src={import('../images/something.jpg')} alt={imgAlt} widths={[800, 1200, 1600, 3200]} sizes="(max-width: 800px) 100%, 100%" height={600} formats={['avif', 'jpeg', 'webp']}  aspectRatio="3:2" style="margin-inline: auto;display: block;object-fit: cover;" class="featureimg" />
      <slot name="common" />
    <slot/>
  </div>
</article> 


<style lang="scss">

  $mtop: 2rem;
  $mi: 6%;
  
  
  .largediv {
    display: flex;
    flex-flow: column wrap;
    width: 100%;
    max-width: 100%;
  }
  .paragraph :global(h2)  {
    margin-top: 3rem;
    font-size: 180%;
  }
  @media (min-width: 890px){
    .largefeature{
      position: relative;
      width: 114%;
      margin-inline: -$mi;
      margin-top: -$mtop;
      & .intro {
        flex: 1 1 60%;
        max-width: 60%;
        padding: 2rem 3%;
      }
      & .featureimg {
        flex: 1 1 40%;
        max-width: 40%;
        // width: 100%;
      }
    }
    .largediv {
      flex-flow: row wrap;
      &  > :global(img) { 
        flex: 1 1 35%;
        margin-top: 0;
        min-height: 40rem;
        max-height: 30rem;
       }
    }
    .paragraph {
      position: relative;
      overflow:hidden;
    }
  }

  section.smallfeature {
    padding-inline: 2rem;
    width: 100%;
  }
  .readmore {
    color: hsl(var(--color1hsl));
    display: inline-block;
    margin-left: auto;
    margin-top: 0.8rem;
    border-bottom: 1px solid transparent;
    &:hover {
      border-bottom: 1px solid hsl(var(--color1hsl));
    }
  }
  .readmorearrow {
    width: 10px;
    height: 10px;
    filter: invert(24%) sepia(27%) saturate(4898%) hue-rotate(348deg) brightness(91%) contrast(83%);
  }
  a.title{
    border-bottom: 1px solid transparent;
    margin-bottom: 1rem;
    border-bottom: 1px solid hsl(var(--color1hsl));
    padding-left: 2rem;
    display: block;
    position: relative;
    &::after {
      content: '';
      position: absolute;
      width: 14px;
      height: 14px;
      display: block;
      left: 0;
      bottom: 0;
      clip-path: polygon(0 0, 0% 100%, 100% 100%);
      background-color: hsl(var(--color1hsl));
    }
    & > h3 {
      margin-bottom: 0.6rem;
      letter-spacing: 0;
    }
  }
  .subtitle {
    color: #ccc;
  }

</style>