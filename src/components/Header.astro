---
const arrofLinks = ["Plans", "Resources", "Use Cases", "Contact",]
---
<header>
<a href="/"><img src="/reviewmate-mainlogo(white).svg" alt="ReviewMate logo" style="max-width:20rem;" /></a>
<a href="#main" aria-label="Skip to content" id="skiptocontent" tab-index="0">Skip to content</a>
<div id="mobilenavbutton" onClick="
  document.querySelector('nav').classList.add('mobilemenu--open');
">
</div>
  <nav>
    <ul>
    {arrofLinks.map(each => 
    <li>
      <a href={`/${each.replace(' ', '').toLowerCase()}`}>{ each }</a>
    </li>
    )}
    </ul>
  </nav>
</header>

<style lang="scss">
  header {
    // width: 100%;
    background-color: hsl(var(--color1hsl));
    // padding: 1rem 1rem 0;
    z-index: 500;
	max-width: 100rem;
	padding: 1rem 2rem 1rem 1rem;
  margin: 0 auto;
  }
  
  #mobilenavbutton {
    color: white;
    z-index:900;
    outline: 2px solid purple;
    background-color: white;
    // height: 100%;
    position: absolute;
    right: 1rem;
    top: 1rem;
    height: 2rem;
    width: 2rem;
  }
  
  nav {

    position: absolute;
    top: 3.5rem;
    right: 0.5rem;
    // width: calc(100% - 28rem);
    // margin-right: 1rem;
    margin-left: auto;
    float: right;
    background-color: white;
    z-index: 800;
    border-radius: 8px;
    
  & ul {
    display: flex;
    flex-flow: column nowrap;
    // justify-content: flex-end;
    gap: 0;
    // width: calc(100% - 28rem);
    & li {
      list-style-type: none;
      line-height: 3rem;
      // font-size: 2.5rem;
      // padding: 10px 20px;
      color: white;
      & a {
        color: hsl(var(--color1hsl));
        padding: 10px 30px;
        display: block;
      }
    }
  }
}
.mobilemenu--open {
		visibility: visible;
		opacity: 1;
    transform: translate3d(0,0,0);
	}
@media(max-width:579px){
    #mobilenavbutton {
      // visibility: hidden;
    }
    nav {
      overflow: hidden;
      visibility: hidden;
      transition: transform 0.3s;
      transition-timing-function: ease;
      opacity: 0;
      transform: translate3d(200px,0,0);
      will-change: transform;
    }
    nav ul li a::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      display: block;
      top: 0;
      left: 0;
      background-color: hsl(var(--color2hsl));
      transform: translate3d(-100%, 0, 0);
      transition: transform 0.3s;
      transition-timing-function: ease;
      &:hover {
        transform: translate3d(0, 0, 0);
      }
    }
  }
  @media(min-width:580px){
    #mobilenavbutton {
      visibility: hidden;
    }
    
  }
</style>
  