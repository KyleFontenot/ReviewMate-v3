<script>

  const carouselContainer = document.querySelector('#partnercarousel');
  let scrollPos = carouselContainer.scrollLeft;
  let isScrolling = false;


  let options = {
    root: null,
    rootMargin: '0px',
    threshold: 1.0
  }

  let observer = new IntersectionObserver(assessScroll, options);
  observer.observe(carouselContainer);

  function initintersection() {
    console.log('hello')
    isScrolling = true;
    setInterval(() => {
      assessScroll();
    }, 100);
  }

  function assessScroll() : void{
    // isScrolling = true; 
    if ( carouselContainer.scrollLeft > ( carouselContainer.clientWidth * 0.80) && isScrolling){
      window.requestAnimationFrame(scrollLeft)
      scrollLeft()
    }
    else if ( carouselContainer.scrollLeft < ( carouselContainer.clientWidth * 0.80) && isScrolling) {
      console.log('scrollRight')
      window.requestAnimationFrame(scrollRight)
      scrollRight()
    }
  }
  function scrollRight() {
    carouselContainer.scrollLeft += 2;
  }
  function scrollLeft() {
    carouselContainer.scrollLeft -= 2;
  }
  document.querySelectorAll('.partnerlogo').forEach(logo => {
    logo.addEventListener('mousenter', () => {
      isScrolling = false;
    })
    logo.addEventListener('mousexit', () => {
      isScrolling = true;
    })
  })

</script>

