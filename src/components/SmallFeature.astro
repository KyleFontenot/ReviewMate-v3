---
interface SmallFeatureProps {
  href: string;
  title: string;
}
const {href, title } = Astro.props as SmallFeatureProps;
---


<section class="smallfeature">
  <a href={href} class="title"><h3>{title}</h3></a>
  <slot />
  <slot name="bulletpoints" />
  <slot name="relatedblog" />
  <a href={href} class="readmore">Read more <img src="/icons/diagonal-arrow.svg" class="readmorearrow"/></a>
</section>

<style>

  section.smallfeature {
    padding-inline: 2rem;
    width: 100%;
  }
  .readmore {
    color: hsl(var(--color1hsl));
    display: inline-block;
    margin-left: auto;
    margin-top: 0.8rem;
    border-bottom: 1px solid transparent;
    &:hover {
      border-bottom: 1px solid hsl(var(--color1hsl));
    }
  }
  .readmorearrow {
    width: 10px;
    height: 10px;
    filter: invert(24%) sepia(27%) saturate(4898%) hue-rotate(348deg) brightness(91%) contrast(83%);
  }
  a.title{
    border-bottom: 1px solid transparent;
    margin-bottom: 1rem;
    border-bottom: 1px solid hsl(var(--color1hsl));
    padding-left: 2rem;
    display: block;
    position: relative;
    &::after {
      content: '';
      position: absolute;
      width: 14px;
      height: 14px;
      display: block;
      left: 0;
      bottom: 0;
      clip-path: polygon(0 0, 0% 100%, 100% 100%);
      background-color: hsl(var(--color1hsl));
    }
    & > h3 {
      margin-bottom: 0.6rem;
      letter-spacing: 0;
    }
  }
  .subtitle {
    color: #ccc;
  }

</style>