---
const {variant, style } = Astro.props
---

{variant === 0 ? <div class="flexdiv flexdiv0" {style}>
<slot name="image"/>
<slot name="body"/>
</div> : variant === 1 ? <div class="flexdiv flexdiv1" {style}>
<slot name="body"/>
<slot name="image"/>
</div> : variant === 2 ? <div class="flexdiv flexdiv2" {style}>
<slot name="image"/>
<slot name="body"/>
</div>  : <div class="flexdiv" {style}>
<slot />
</div> }
