---
import Arrow from "./Arrow.astro"
  interface ButtonProps {
    text: string;
    as: "link" | "input" | "link"; 
    href?: string; 
    outline?: boolean 
    color?: "maroon" | "yellow" | "white";
    style?: string; 
    size?: number;
    leftArrow?: boolean;
    className?: string
  }
const {text, as = "link", href, outline, color = "maroon", style, size = 1, leftArrow, className} = Astro.props as ButtonProps
---
{as === "link" ? 
  <a href={href} class:list={['button', {'button--outline': outline}, {[`button--${color}`] : color}, {[`button--${size}`] : size}, className]} {style}>{leftArrow ? <Arrow/> : ''}{text}</a> : 
as === ("submit" || "input") ? 

  <input type="submit" class:list={['button', {'button--outline': outline, 'button--leftarrow': leftArrow}, {[`button--${color}`] : color}, {[`button--${size}`] : size}, className]} value={text} {style}/> : 

<button class:list={['button', {'button--outline': outline}, {[`button--${color}`] : color}, {[`button--${size}`] : size}, className]} {style}>{leftArrow ? <Arrow/> : ''} {text}</button>
  }

<style lang="scss" is:global>
  .button {
    padding: 0.8rem 1.4rem;
    position: relative;
    font-size: 1.1rem;
    display: inline-block;
    height: auto;
    width: auto;
    min-width: auto;
    border: none;
    border-radius: 4px;
    margin: 0.5rem 0.5rem 1rem;
    letter-spacing: 0.2px;
    border-color: hsl(var(--color1hsl));
    border-width: 0;
    border-style: solid;
    box-shadow: 0 1px 1px -2px hsl(var(--color1hsl));
    cursor: pointer;
    transition: transform 0.2s;
    &.button--white {
      background-color: white;
      border-color: white;
      box-shadow: 0 1px 8px -2px #bbb;
    }
    &.button--yellow {
      background-color: hsl(var(--color2hsl));
      border-color: hsl(var(--color2hsl));
      color: hsl(var(--color1hsl));
      box-shadow: 0 1px 8px -2px hsl(var(--color2hsl));
    }
    &.button--maroon {
      background-color: hsl(var(--color1hsl));
      border-color: hsl(var(--color1hsl));
      color: white;
      box-shadow: 0 1px 5px -2px hsl(var(--color1hsl));
    }
    &.button--outline {
      background-color: transparent;
      border-width: 1px;
      color: hsl(var(--color1hsl));
    }
    &:hover,
    &:focus-visible {
      transform: translate3d(0, -3px, 0);
    }
    &.button--2:hover,
    &.button--2:focus-visible {
      transform: translate3d(0, -3px, 0) scale(1.2);
    }
    &.button--3:hover,
    &.button--3:focus-visible {
      transform: translate3d(0, -3px, 0) scale(1.4);
    }
    &:focus-visible {
      outline: 2px solid #777;
    }
    &.button--2 {
      transform: scale(1.15);
      margin: 10px 10px 10px 1rem;
    }
    &.button--3 {
      transform: scale(1.3);
      margin: 15px 15px 15px 1rem;
      border-radius: 6px;
    }
  }
  </style>