---
  
const {text, as, href, outline, color = "maroon", style} = Astro.props
---
{as === "link" ? 
  <a href={href} class:list={['button', {'button--outline': outline}, {[`button--${color}`] : color}]} {style}>{text}</a> : 
as === "submit" || as === "input" ? 
  <input type="submit" class:list={['button', {'button--outline': outline}, {[`button--${color}`] : color}]}  value={text} {style}/> : 
<button class:list={['button', {'button--outline': outline}, {[`button--${color}`] : color}]}  {style}>{text}</button>
  